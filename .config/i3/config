# vim:filetype=i3
# i3 config file
# Inspired by: https://github.com/Airblader/dotfiles-manjaro/blob/master/.i3/config
set $mod Mod4
set $editor termite

set_from_resource $red    color1  #ff00ff
set_from_resource $yellow color3  #ff00ff
set_from_resource $gray0  color0  #ff00ff
set_from_resource $gray1  color8  #ff00ff
set_from_resource $gray2  color7  #ff00ff
set_from_resource $gray3  color15 #ff00ff

set $default_gaps_inner 16
set $default_gaps_outer 0
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

workspace_auto_back_and_forth yes
force_display_urgency_hint 0 ms
focus_on_window_activation urgent

floating_minimum_size -1 x -1
floating_maximum_size -1 x -1

font pango:Hack, FontAwesome 12

#                       BORDER   BACKGROUND  TEXT    INDICATOR  CHILD_BORDER
client.focused          $gray1   $gray0      $gray3  $gray1     $gray1
client.unfocused        $gray1   $gray0      $gray3  $gray1     $gray1
client.focused_inactive $gray1   $gray0      $gray3  $gray1     $gray1
client.urgent           $gray1   $gray0      $gray3  $gray1     $gray1
client.background       $gray1

floating_modifier $mod

bindsym $mod+Return exec --no-startup-id i3-sensible-terminal

bindsym $mod+q kill

bindsym $mod+d exec --no-startup-id rofi -show run

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+f fullscreen

bindsym $mod+t layout tabbed
bindsym $mod+s layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
#bindsym $mod+d focus child

bindsym $mod+1 focus output DVI-D-2; workspace 1; focus output DP-1; workspace 2
bindsym $mod+2 focus output DVI-D-2; workspace 3; focus output DP-1; workspace 4
bindsym $mod+3 focus output DVI-D-2; workspace 5; focus output DP-1; workspace 6
bindsym $mod+4 focus output DVI-D-2; workspace 7; focus output DP-1; workspace 8
bindsym $mod+5 focus output DVI-D-2; workspace 9; focus output DP-1; workspace 10

bindsym $mod+Ctrl+1 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 1 DVI-D-2 DP-1
bindsym $mod+Ctrl+2 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 2 DVI-D-2 DP-1
bindsym $mod+Ctrl+3 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 3 DVI-D-2 DP-1
bindsym $mod+Ctrl+4 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 4 DVI-D-2 DP-1
bindsym $mod+Ctrl+5 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 5 DVI-D-2 DP-1

bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Shift+s sticky toggle

bindsym $mod+Shift+1 exec --no-startup-id $HOME/Scripts/move_focused_window 1 DVI-D-2 DP-1
bindsym $mod+Shift+2 exec --no-startup-id $HOME/Scripts/move_focused_window 2 DVI-D-2 DP-1
bindsym $mod+Shift+3 exec --no-startup-id $HOME/Scripts/move_focused_window 3 DVI-D-2 DP-1
bindsym $mod+Shift+4 exec --no-startup-id $HOME/Scripts/move_focused_window 4 DVI-D-2 DP-1
bindsym $mod+Shift+5 exec --no-startup-id $HOME/Scripts/move_focused_window 5 DVI-D-2 DP-1

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+n exec --no-startup-id thunar

# Bind corsair k70 volume keys
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 1%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 1%-

# Bind fullscreen screenshot and region screenshoot
bindsym Print exec --no-startup-id xfce4-screenshooter --fullscreen
bindsym $mod+Print exec --no-startup-id xfce4-screenshooter --region

# Bind toggle scratchpad for window
bindsym $mod+w scratchpad show

bindsym $mod+r mode "resize"
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Setup Window Borders
new_window none

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable

for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

for_window [class="(?i)thunar"] floating enable
for_window [class="(?i)keepass"] move scratchpad

for_window [title="shutdown_menu-DVI-D-2"] floating enable move absolute position 15 405
for_window [title="shutdown_menu-DP-1"] floating enable move absolute position 1935 45
for_window [title="volume_slider-DVI-D-2"] floating enable move absolute position 1816 405
for_window [title="volume_slider-DP-1"] floating enable move absolute position 4376 45
for_window [title="notification_popup-DVI-D-2"] floating enable move absolute position 1390 405
for_window [title="notification_popup-DP-1"] floating enable move absolute position 3950 45

# ---START STUFF---
exec --no-startup-id compton --config $HOME/.config/compton.conf -b 	# composite manager
exec --no-startup-id sh $HOME/.fehbg 					# set Wallpaper

exec lemonbar -p -g 4480x45+0+0 -F "#00000000" -B "#00000000" 		# placeholder for bars
exec --no-startup-id $HOME/.config/panel/bar_config DP-1 2 30 15 	# right screen bar
exec --no-startup-id $HOME/.config/panel/bar_config DVI-D-2 2 30 15 	# left screen bar

exec --no-startup-id keepass 						# password manager
exec --no-startup-id numlockx 						# enable numlock
exec --no-startup-id python2 $HOME/Scripts/leechnot_server.py 		# start Notification Server
exec --no-startup-id $HOME/Scripts/sensor_notifications 75 		# start notifications for overheating

