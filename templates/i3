# vim:filetype=i3
# i3 config file
# Inspired by: https://github.com/Airblader/dotfiles-manjaro/blob/master/.i3/config
set $mod Mod4

set $red {{color09}}
set $yellow {{color03}}
set $gray0 {{color00}}
set $gray1 {{color08}}
set $gray2 {{color07}}
set $gray3 {{color15}}

set $default_gaps_inner 20
set $default_gaps_outer 0
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

workspace_auto_back_and_forth no
force_display_urgency_hint 0 ms
focus_on_window_activation urgent

floating_minimum_size -1 x -1
floating_maximum_size -1 x -1

font pango:{{monofont}} 11, {{iconfont}} 11

#                       BORDER   BACKGROUND  TEXT    INDICATOR  CHILD_BORDER
client.focused          $gray1   $gray0      $gray3  $gray1     $gray1
client.unfocused        $gray1   $gray0      $gray3  $gray1     $gray1
client.focused_inactive $gray1   $gray0      $gray3  $gray1     $gray1
client.urgent           $gray1   $gray0      $gray3  $gray1     $gray1
client.background       $gray1

floating_modifier $mod

bindsym $mod+Return exec --no-startup-id termite

bindsym $mod+q kill

bindsym $mod+d exec --no-startup-id rofi -show run

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+f fullscreen

bindsym $mod+t layout tabbed
bindsym $mod+s layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
#bindsym $mod+d focus child

exec --no-startup-id $HOME/Scripts/change_workspaces 1

bindsym $mod+1 exec --no-startup-id $HOME/Scripts/change_workspaces 1
bindsym $mod+2 exec --no-startup-id $HOME/Scripts/change_workspaces 2
bindsym $mod+3 exec --no-startup-id $HOME/Scripts/change_workspaces 3
bindsym $mod+4 exec --no-startup-id $HOME/Scripts/change_workspaces 4
bindsym $mod+5 exec --no-startup-id $HOME/Scripts/change_workspaces 5

bindsym $mod+Ctrl+1 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 1
bindsym $mod+Ctrl+2 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 2
bindsym $mod+Ctrl+3 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 3
bindsym $mod+Ctrl+4 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 4
bindsym $mod+Ctrl+5 exec --no-startup-id $HOME/Scripts/switch_focused_workspace 5

bindsym $mod+Shift+s sticky toggle

bindsym $mod+Shift+exclam exec --no-startup-id $HOME/Scripts/move_focused_window 1
bindsym $mod+Shift+quotedbl exec --no-startup-id $HOME/Scripts/move_focused_window 2
bindsym $mod+Shift+section exec --no-startup-id $HOME/Scripts/move_focused_window 3
bindsym $mod+Shift+dollar exec --no-startup-id $HOME/Scripts/move_focused_window 4
bindsym $mod+Shift+percent exec --no-startup-id $HOME/Scripts/move_focused_window 5

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+n exec --no-startup-id pcmanfm

# Bind corsair k70 volume keys
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 1%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 1%-

# Bind fullscreen screenshot and region screenshoot
bindsym Print exec --no-startup-id scrot -q 100 '/home/undeadleech/Pictures/tmp.png'
bindsym $mod+Print exec --no-startup-id scrot -s -q 100 '/home/undeadleech/Pictures/tmp.png'

# Bind toggle scratchpad for window
bindsym $mod+w scratchpad show

bindsym $mod+r mode "resize"
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Setup Window Borders
new_window pixel 3

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable

for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

for_window [class="(?i)pcmanfm"] floating enable
for_window [class="(?i)keepass"] move scratchpad

for_window [title="shutdown_menu-DVI-D-1"] floating enable, border none, move absolute position 0 420
for_window [title="shutdown_menu-DVI-D-2"] floating enable, border none, move absolute position 1680 390
for_window [title="shutdown_menu-DP-1"] floating enable, border none, move absolute position 3600 30

for_window [title="volume_slider-DVI-D-1"] floating enable, border none, move absolute position 1330 420
for_window [title="volume_slider-DVI-D-2"] floating enable, border none, move absolute position 3250 390
for_window [title="volume_slider-DP-1"] floating enable, border none, move absolute position 5810 30

for_window [title="notification_popup-DVI-D-1"] floating enable, border none, move absolute position 1330 420
for_window [title="notification_popup-DVI-D-2"] floating enable, border none, move absolute position 3250 390
for_window [title="notification_popup-DP-1"] floating enable, border none, move absolute position 5810 30

# ---START STUFF---
exec --no-startup-id compton --config $HOME/.config/compton.conf -b     # composite manager
exec --no-startup-id nitrogen --restore                                 # set Wallpaper

exec --no-startup-id $HOME/Scripts/bar_control                          # start Lemonbar Rust

exec --no-startup-id keepass                                            # password manager
exec --no-startup-id numlockx                                           # enable numlock
exec --no-startup-id python2 $HOME/Scripts/leechnot_server.py           # start Notification Server
#exec --no-startup-id $HOME/Scripts/sensor_notifications 75              # start notifications for overheating

