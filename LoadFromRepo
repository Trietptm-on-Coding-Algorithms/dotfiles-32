#!/bin/bash

cp ./.zshrc ~/
cp ./.xinitrc ~/
cp ./.spacemacs ~/
cp ./.Xresources ~/

cp ./.config/compton.conf ~/.config/

cp -r ./Scripts ~/

cp -r ./.config/i3 ~/.config/
cp -r ./.config/panel ~/.config/
cp -r ./.config/Thunar ~/.config/
cp -r ./.config/termite ~/.config/
cp -r ./.config/neofetch ~/.config/
cp -r ./.config/powerline ~/.config/

cp -r ./.themes/Numix-Undead ~/.themes/
echo "Please remember to setup the bar in your i3 config."
